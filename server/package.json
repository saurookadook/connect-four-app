{
  "name": "@connect-four-app/server",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cp ../.env ./.env && NODE_ENV=dev nest start --watch",
    "start:debug": "yarn start:dev --debug",
    "start:prod": "NODE_ENV=prod node dist/main",
    "ncs": "ts-node -r tsconfig-paths/register src/scripts/run.script.ts",
    "ncs:test_script": "yarn ncs test_script",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cp ../.env.test ./.env.test && NODE_ENV=test yarn jest --runInBand --detectOpenHandles",
    "test:watch": "test --watch",
    "test:cov": "test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "test --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@connect-four-app/shared": "workspace:*",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-ws": "^11.1.3",
    "@nestjs/websockets": "^11.1.3",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "connect-mongodb-session": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.1",
    "mongoose": "^8.15.0",
    "nest-commander": "^3.17.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "readline-sync": "^1.4.10",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/devtools-integration": "^0.2.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-mongodb-session": "^2.4.8",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/passport": "^0",
    "@types/passport-local": "^1.0.38",
    "@types/readline-sync": "^1.4.8",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-websocket-mock": "^2.5.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1"
  }
}
